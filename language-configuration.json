{
    "comments": {
        "blockComment": [ "<!--", "-->" ]
    },
    // symbols used as brackets
    "brackets": [
		["<!--", "-->"],
        // ["<::", ">"],
        // ["<@(", ")>"],
        // ["<@", ">"],
        // ["<?(", ")>"],
        // ["<?", ">"],
        ["</", ">"],
        ["</", "/>"],
		["<", ">"],
		["{", "}"],
        ["@(", ")"],
        ["?(", ")"],
        ["#(", ")"],
		["(", ")"],
        ["@[", "]"],
        ["[", "]"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
		{ "open": "{", "close": "}"},
		{ "open": "[", "close": "]"},
		{ "open": "(", "close": ")" },
		{ "open": "'", "close": "'" },
		{ "open": "\"", "close": "\"" },
		{ "open": "<!--", "close": "-->", "notIn": [ "comment", "string" ]}
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
		{ "open": "'", "close": "'" },
		{ "open": "\"", "close": "\"" },
		{ "open": "{", "close": "}"},
		{ "open": "[", "close": "]"},
		{ "open": "(", "close": ")" },
		{ "open": "<", "close": ">" }
    ]
}